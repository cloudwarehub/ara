<section class="content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Add Cluster</h3>
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Cluster Name:</label>
                    <div class="col-sm-10">
                      {{input type='text' value=fields.name class='form-control' placeholder="Region Name"}}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Description:</label>
                    <div class="col-sm-10">
                      {{input type='text' value=fields.description class='form-control' placeholder="Description"}}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">City:</label>
                    <div class="col-sm-10">
                        <select value=fields.city class='form-control' >
                            <option selected="selected">BGP</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success" {{action 'submit' fields}}>Submit</button>
                        <button type="button" class="btn btn-default" {{action "cancle"}}>Cancle
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</section>